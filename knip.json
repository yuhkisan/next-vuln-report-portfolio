{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "entry": ["app/**/*.{ts,tsx}"],
  "project": [
    "app/**/*.{ts,tsx}",
    "lib/**/*.ts",
    "prisma/**/*.ts",
    "vitest.config.ts",
    "playwright.config.ts"
  ],
  "ignore": ["**/*.d.ts", "generated/**"],
  "ignoreDependencies": [
    "@prisma/client",
    "@eslint/eslintrc",
    "@eslint/js",
    "@typescript-eslint/parser",
    "eslint-plugin-react-hooks",
    "globals",
    "yaml"
  ]
}
